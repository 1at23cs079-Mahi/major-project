# HealthChain Platform - Production Environment
# This file should be used as a reference for production deployment

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=production
PORT=5000

# =============================================================================
# DATABASE
# =============================================================================
# Use PostgreSQL for production
DATABASE_URL="postgresql://user:password@db-server:5432/healthcare?schema=public&sslmode=require"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# IMPORTANT: Generate strong secrets for production
# openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_STRONG_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# REDIS
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=redis-server
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD
REDIS_DB=0

# =============================================================================
# RATE LIMITING
# =============================================================================
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/healthcare/app.log

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=https://healthchain.example.com

# =============================================================================
# FRONTEND URLs
# =============================================================================
FRONTEND_URL=https://healthchain.example.com
PLATFORM_URL=https://platform.healthchain.example.com
